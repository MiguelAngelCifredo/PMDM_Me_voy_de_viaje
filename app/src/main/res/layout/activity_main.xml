<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destino:"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/rgDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp">

        <RadioButton
            android:id="@+id/rbDestino1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="París" />

        <RadioButton
            android:id="@+id/rbDestino2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Londres" />

        <RadioButton
            android:id="@+id/rbDestino3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roma" />
    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transporte:"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/rgTransporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp">

        <RadioButton
            android:id="@+id/rbTransporte1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Coche" />

        <RadioButton
            android:id="@+id/rbTransporte2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tren" />

        <RadioButton
            android:id="@+id/rbTransporte3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avión" />
    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp" />

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="INFORMACIÓN" />
</LinearLayout>